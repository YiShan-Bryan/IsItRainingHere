<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="#ffccb1ff"
    android:minWidth="500dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="85dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Is It Raining? "
            android:id="@+id/isRainLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/latLabel"
            android:layout_above="@+id/lngView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textIsSelectable="true"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:id="@+id/lngLabel"
            android:layout_below="@+id/latLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="84dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isRain"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/isRainLabel"
            android:layout_toEndOf="@+id/isRainLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latView"
            android:textColor="@android:color/black"
            android:layout_below="@+id/isRain"
            android:layout_toRightOf="@+id/isRainLabel"
            android:layout_toEndOf="@+id/isRainLabel"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lngView"
            android:textColor="@android:color/black"
            android:layout_below="@+id/latView"
            android:layout_alignLeft="@+id/latView"
            android:layout_alignStart="@+id/latView"
            android:maxLines="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition: "
        android:id="@+id/condLabel"
        android:textColor="@android:color/black"
        android:layout_below="@+id/isRain"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/condView"
        android:textColor="@android:color/black"
        android:text="dfa"
        android:layout_alignTop="@+id/condLabel"
        android:layout_toRightOf="@+id/condLabel"
        android:layout_toEndOf="@+id/condLabel" />

</LinearLayout>
